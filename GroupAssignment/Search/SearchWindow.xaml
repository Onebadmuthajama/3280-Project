<Window x:Class="GroupAssignment.Search.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupAssignment.Search"
        mc:Ignorable="d"
        Title="SearchWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Invoice Number" />
                <ComboBox x:Name="numFilter" Grid.Row="0" Grid.Column="1" />
                <Label Grid.Row="1" Grid.Column="0" Content="Invoice Date" />
                <ComboBox x:Name="dateFilter" Grid.Row="1" Grid.Column="1" />
                <Label Grid.Row="2" Grid.Column="0" Content="Total Cost" />
                <ComboBox x:Name="chargeFilter" Grid.Row="2" Grid.Column="1" />
            </Grid>
        </StackPanel>

        <DataGrid x:Name="listDisplay" Grid.Row="1" Grid.Column="0" Margin="5,5,5,0" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="col1" Header="Invoice Number" Binding="{Binding Path=invoiceNum}" />
                <DataGridTextColumn Header="Invoice Date" Binding="{Binding Path=invoiceDate}" />
                <DataGridTextColumn Header="Total Cost" Binding="{Binding Path=totalCost}" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,5,5,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Orientation="Horizontal">
            <!-- opens items window, will eventually pass the object from the DataGrid through to the items window -->
            <Button x:Name="selectButton" Click="CloseWindow" Width="50" Height="50" Content="Select" />
            <Button x:Name="cancelButton" Click="CloseWindow" Width="50" Height="50" Margin="5,0,0,0" Content="Cancel" />
        </StackPanel>
    </Grid>
</Window>